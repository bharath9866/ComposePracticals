<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.AdaptiveStreamingPlayer" parent="android:Theme.Material.Light.NoActionBar" />
    <style name="TextView_SB">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:font" tools:ignore="NewApi">@font/montserrat_semibold</item>
    </style>

    <declare-styleable name="ArcProgress">
        /**
        This Attribute will Set color of Progress.
        This Attribute take color as input
        **/
        <attr name="ap_progress_color" format="color" />
        /**
        This Attribute will Set background color of Progress.
        This Attribute take color as input
        **/
        <attr name="ap_progress_background_color" format="color" />
        /**
        This Attribute will set thickness of upper layer of Progressbar.
        This Attribute take Float as input
        **/
        <attr name="ap_foreground_progressbar_width" format="float" />
        /**
        This Attribute will set thickness of bottom layer of Progressbar.
        This Attribute take Float as input
        **/
        <attr name="ap_background_progressbar_width" format="float" />
        /**
        This Attribute will set progress on progressbar.
        This Attribute take Float as input
        **/
        <attr name="ap_progress" format="float" />
        /**
        This attribute Make round corner end progress in progress bar.
        **/
        <attr name="ap_progress_roundedCorner" format="boolean" />
        /**
        This attribute set your progressbar clockwise and anticlockwise
        **/
        <attr name="ap_progress_isClockwise" format="boolean" />
        /**
        This attribute set progress maxscale for your progressbar.
        **/
        <attr name="ap_progress_maxscale" format="float" />
        /**
        This attribute enable click listener on progressbar.
        **/
        <attr name="ap_progress_touchEnabled" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ProgressButton">
        <attr name="btn_text_size" format="dimension" />
        <attr name="btn_text_color" format="color" />
        <attr name="default_text" format="string" />
        <attr name="finish_text" format="string" />
        <attr name="loading_text" format="string" />
        <attr name="button_text" format="string" />
        <attr name="is_vibrate" format="boolean" />
        <attr name="is_button_fill" format="boolean" />
        <attr name="vibration_millisecond" format="integer" />

        <attr name="ripple_color" format="color" />
        <attr name="default_color" format="color" />
        <attr name="white_color" format="color" />
        <attr name="pressed_color" format="color" />
        <attr name="disabled_color" format="color" />
        <attr name="finished_color" format="color" />
        <attr name="stroke_color" format="color" />

        <attr name="stroke_width" format="dimension" />
        <attr name="corner_radius" format="dimension" />
        <attr name="btn_elevation" format="dimension" />
    </declare-styleable>
</resources>