<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#96C2E5">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/flash_cards_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:nestedScrollingEnabled="false"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="@dimen/_34dp"
        android:layout_height="@dimen/_34dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:padding="5dp"
        android:src="@drawable/close" />
    <LinearLayout
        android:id="@+id/swipe_up_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF555555"
        android:gravity="center"
        android:visibility="gone"
        android:alpha="0.8">
        <ImageView
            android:layout_width="182dp"
            android:layout_height="@dimen/_300dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_70dp"
            android:src="@drawable/swipe_up"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/finish_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical"
        android:background="#4E4B66">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/gif_image"
            android:layout_width="@dimen/_235dp"
            android:layout_height="@dimen/_235dp"
            android:layout_gravity="center"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"/>
<!--        <ImageView-->
<!--            android:id="@+id/gif_image"-->
<!--            android:layout_width="235dp"-->
<!--            android:layout_height="235dp"-->
<!--            android:layout_gravity="center"-->
<!--            />-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Well Done!"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="You've revised all the flashcards"
            android:textColor="@color/white"/>
        <LinearLayout
            android:id="@+id/continue_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:background="@drawable/bookmarked_bg"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_24dp"
            android:paddingTop="@dimen/_8dp"
            android:paddingBottom="@dimen/_8dp"
            android:paddingRight="@dimen/_24dp"
            android:visibility="visible"
            android:layout_marginTop="@dimen/_70dp"
            android:layout_marginBottom="@dimen/_10dp">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:text="Continue"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>