<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- This is the main layout file for the ILTS report activity. It contains a toolbar and a nested scroll view. -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/jee_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/jee_ilts_back_btn"
            android:layout_width="@dimen/_48dp"
            android:layout_height="@dimen/_48dp"
            android:padding="@dimen/_16dp"
            android:src="@drawable/ic_back_arrow"
            android:scaleType="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextView_SB"
            android:layout_width="wrap_content"
            android:text="@string/report"
            android:textColor="@color/black"
            android:textSize="@dimen/text_15sp"
            android:visibility="visible"
            android:layout_marginStart="@dimen/dimen_8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/jee_ilts_back_btn"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextView_SB"
            android:layout_width="wrap_content"
            android:text="@string/view_solutions"
            android:textAllCaps="true"
            android:id="@+id/jee_adv_view_solution"
            android:textColor="@color/primary_color"
            android:textSize="@dimen/text_14sp"
            android:clickable="false"
            android:visibility="visible"
            android:layout_marginEnd="@dimen/dimen_16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/jee_body"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        app:layout_constraintTop_toBottomOf="@id/jee_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_gray">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/testName"
                android:text="ILTS 2 | 24 Jun, 2022"
                android:textColor="@color/lightcolor"
                android:textSize="@dimen/text_30sp"
                style="@style/TextView_SB"
                android:textAlignment="center"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_26dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/highlights"/>

            <TextView
                android:id="@+id/highlights"
                android:text="Highlights"
                android:textColor="@color/black"
                android:textSize="@dimen/text_24sp"
                style="@style/TextView_SB"
                android:textAlignment="textStart"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="50dp"
                app:layout_constraintTop_toBottomOf="@id/testName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/scoreProgressView"/>

            <com.example.adaptivestreamingplayer.ilts.report.ScoreProgressView
                android:id="@+id/scoreProgressView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_192dp"
                app:score="100"
                app:progressbar_width="39"
                android:background="@color/light_gray"
                app:progress_maxscale="100"
                app:progress_roundedCorner="true"
                app:progress_background_color="#EFF0F6"
                app:progress_color="#FBD93E"
                app:layout_constraintTop_toBottomOf="@id/highlights"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/clQuestionsAttempted"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clQuestionsAttempted"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="@dimen/_20dp"
                android:layout_marginVertical="@dimen/_10dp"
                android:layout_marginHorizontal="@dimen/_16dp"
                android:background="@drawable/scoreview_elements_bg"
                app:layout_constraintTop_toBottomOf="@id/scoreProgressView">
                <TextView
                    android:id="@+id/tvQuestionsAttempted"
                    android:text="Questions Attempted"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_24sp"
                    style="@style/TextView_SB"
                    android:textAlignment="textStart"
                    android:layout_marginBottom="@dimen/_13dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <include
                    android:id="@+id/includeIltsReportQABody"
                    layout="@layout/ilts_report_qa_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_16dp"
                    android:layout_marginVertical="@dimen/dimen_10dp"
                    android:layout_marginTop="@dimen/_13dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvQuestionsAttempted"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>