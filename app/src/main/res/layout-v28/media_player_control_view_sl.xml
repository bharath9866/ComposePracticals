<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mediaPlayerControlViewSl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:background="#8014142B"
    android:layout_weight="1"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lcExoViewHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="horizontal"
        android:padding="4dp"
        android:weightSum="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/exoBack"
            android:layout_width="@dimen/_50dp"
            android:layout_height="@dimen/_50dp"
            android:background="@android:color/transparent"
            android:padding="24dp"
            android:src="@drawable/ic_chapter_back_icon_sl_21"
            app:tint="@color/white"
            android:contentDescription="@string/video_player_back_button" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/book_mark"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:visibility="visible"
            android:src="@drawable/book_mark_icon_sl"
            app:tint="@color/white"
            android:contentDescription="Bookmark Video"
            />

    </LinearLayout>

    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/media_play_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lcExoViewHeader"
        app:layout_constraintBottom_toTopOf="@id/linearLayout"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lcExoViewHeader"
        app:layout_constraintBottom_toTopOf="@id/linearLayout"
        style="@style/ExoStyledControls.Button.Center.PlayPause">
        <ImageButton android:id="@id/exo_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_sl_exoplayer_pause"
            style="@style/ExoMediaButton.Play"/>
        <ImageButton android:id="@id/exo_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_sl_exoplayer_play"
            style="@style/ExoMediaButton.Pause"/>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/dimen_16dp"
        android:paddingBottom="@dimen/dimen_6dp"
        app:layout_constraintBottom_toTopOf="@+id/exo_progress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:text="00:00"
            android:id="@id/exo_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="@dimen/text_11sp"
            android:lineHeight="@dimen/text_14sp"
            android:letterSpacing="0.01"
            android:textStyle="bold" />
        <TextView
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="#FFFFFF"
            android:letterSpacing="0.01"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="@dimen/text_11sp"
            android:lineHeight="@dimen/text_14sp"
            android:textStyle="bold" />
        <TextView
            android:text="00:00"
            android:id="@id/exo_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/text_11sp"
            android:fontFamily="@font/montserrat_medium"
            android:lineHeight="@dimen/dimen_14dp"
            android:letterSpacing="0.01"
            android:textStyle="bold" />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <ImageView
            android:id="@+id/exo_fullscreen_icon"
            android:layout_width="@dimen/dimen_34dp"
            android:layout_height="@dimen/dimen_34dp"
            android:layout_gravity="right"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:visibility="visible"
            android:src="@drawable/ic_video_full_screen"
            android:contentDescription="@string/player_orientation" />

    </LinearLayout>

    <androidx.media3.ui.DefaultTimeBar
        android:id="@id/exo_progress"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_16dp"
        android:layout_weight="1"
        app:played_color="#FBD323"
        app:unplayed_color="#FAFAFA"
        app:scrubber_enabled_size="0dp"
        app:scrubber_color="#FBD323"
        app:scrubber_dragged_size="@dimen/dimen_16dp"
        app:bar_height="@dimen/dimen_3dp"
        app:bar_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>